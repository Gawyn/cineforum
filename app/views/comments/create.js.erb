var Q = jQuery.noConflict();

/* Insert a notice between the last comment and the comment form */
Q("#comment-notice").html('<div class="flash notice"><%= escape_javascript(flash.delete(:notice)) %></div>');

/* Replace the count of comments */
Q("#comments_count").html("<%= pluralize(Comment.count, 'Comment') %>");

/* Add the new comment to the bottom of the comments list */
Q("#comments").append("<%= escape_javascript(render(@comment)) %>");

/* Reset the comment form */
Q("#new_comment")[0].reset();
